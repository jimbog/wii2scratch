    [ "r", "Battery % of controller %m.controller", "battery", "1" ],
    [ "r", "Controllers", "controllers" ]
  ],

  "menus": {
    "button": [ "˄", "˃", "˅", "˂", "A", "B", "-", "⌂", "+", "1", "2" ],
    "rotation": [ "x", "y", "z" ],
    "led": [ "1", "2", "3", "4" ],
    "ir": [ "1", "2", "3", "4" ],
    "xy": [ "x", "y"],
    "controller": [ "1", "2", "3", "4" ],
    "onOff": [ "on", "off" ]
  }
