{
  "extensionName": "Wii2Scratch",
  "extensionPort": 15002,
  "blockSpecs": [
    [ "b", "Button %m.button of controller %m.controller", "button", "A", 1 ],
    [ "r", "Rotation %m.rotation of controller %m.controller", "rotation", "z", "1" ],
    [ " ", "Turn led %m.led of controller %m.controller %m.onOff", "led", "1", "1", "on" ],
    [ " ", "Turn rumble of controller %m.controller %m.onOff", "rumble", "1", "on" ],
    [ "b", "IR %m.ir of controller %m.controller found", "irfound", "1", "1" ],
